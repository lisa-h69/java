package td1;
import java.util.*;

public class MesNews {

	private static Scanner scan;

	public static void main (String [] args) {
		//System.out.println("Votre nombre : " );
		//scan = new Scanner(System.in);
		//int i = scan.nextInt();
		//System.out.println(i);
		afficher_menu();
	}


	public static void afficher_menu() {
		System.out.println("Entrez le nombre de votre choix : \n");
		System.out.println("Créer : 1 \nOuvrir : 2 \nSauvegarder : 3 \net flemme d'écrire le reste \n");
		scan = new Scanner(System.in);
		int i = scan.nextInt();
		switch (i) {
			case 1 :
				creer();
				break;
			case 2 :
				ouvrir();
				break;
			case 3 :
				sauvegarder();
				break;
			case 4 :
				afficher();
				break;
			case 5 :
				inserer();
				break;
			case 6 :
				supprimer();
				break;
			case 7 :
				rechercher();
				break;
			case 8 :
				quitter();
				break;
		
		}		
	}
		
	public static void creer() {
		System.out.println("Vous créez une classe");
		
	}
	public static void ouvrir() {
		System.out.println("Vous ouvrez une classe");
		
	}
	public static void sauvegarder() {
		System.out.println("Vous sauvegardez une classe");
		
	}
	public static void afficher() {
		System.out.println("Vous affichez une classe");
		
	}
	public static void inserer() {
		System.out.println("Vous insérez une classe");
		
	}
	public static void supprimer() {
		System.out.println("Vous supprimez une classe");
		
	}
	public static void rechercher() {
		System.out.println("Vous recherchez une classe");
		
	}
	public static void quitter() {
		System.out.println("Vous quittez une classe");
		
	}
	
	
}
